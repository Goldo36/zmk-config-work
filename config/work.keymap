        sescond_layer {
            bindings = <
&kp N8  &kp N8  &kp N8  &kp N8  &kp N8  &kp N8                              &kp N8        &kp N8  &kp N8  &kp N8  &kp N8  &kp N8
&kp N4  &kp N4  &kp N4  &kp N4  &kp N4  &kp N4                              &kp N4        &kp N4  &kp N4  &kp N4  &kp N4  &kp N4
&kp N1  &kp N1  &kp N1  &kp N1  &kp N1  &kp N1  &trans        &bt BT_CLR    &kp N1        &kp N1  &kp N1  &kp N1  &kp N1  &kp N1
